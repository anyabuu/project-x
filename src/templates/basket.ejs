<section class="basket">
    <div class="container-small basket__container">
        <h1 class="basket__title">
            Корзина
        </h1>
        <ul class="basket__list">

            <% listItem.forEach((item) => { %>
              <%- include('shared/basket/basket-list', {...item}) %>
            <% }); %>

        </ul>

        <div class="basket__add">
            <h2 class="basket__add-title basket--title">
                Добавить к заказу?
            </h2>
            <ul class="basket__add-form">

                <% addItem.forEach((item) => { %>
                    <%- include('shared/basket/add-items', {...item}) %>
                <% }); %>

            </ul>
        </div>

        <div class="basket__sauce">
            <h2 class="basket__sauce-title basket--title">
                Соусы к бортикам и закускам
            </h2>
            <ul class="basket__sauce-list">

                <% addSauce.forEach((item) => { %>
                    <%- include('shared/basket/add-sauce', {...item}) %>
                <% }); %>

            </ul>
        </div>

        <div class="basket__promo">
            <h2 class="basket__promo-title">
                Промокод
            </h2>
            <div class="basket__promo-content">
                <div class="order__promo-wrapper">
                    <input class="order__promo-input" type="text" name="promo" id="promo" placeholder="Введите промокод">
                    <button class="order__promo-button button__primary"  type="submit">
                        Применить
                    </button>
                </div>
                <div class="basket__promo-sum">
                    <p class="basket__promo-sum-text">
                        Сумма заказа:
                    </p>
                    <p class="basket__promo-sum-price">
                        1 048 ₴
                    </p>
                </div>
            </div>
        </div>

        <div class="basket__next-step pay__next-step">
            <button class="pay__back-step-button button__tertiary">
                <span class="pay__back"></span>
                Вернуться в магазин
            </button>
            <button class="pay__next-step-button pay__next-step-button--small button__primary">
                <p class="pay__next-step-button-text basket__next-step-button-text">
                    Оформить заказ
                </p>
                <span class="pay__next"></span>
            </button>
        </div>


    </div>
</section>

