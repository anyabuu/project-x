<%- include('parts/head', { styles: styles[0], title: 'Fibo/Pay' }) %>

<!--HEADER SECTION STARTS-->

<%- include('shared/header/header-steps')%>

<!--HEADER SECTION ENDS-->

<div class="wrapper container">

    <!--ORDER SECTION STARTS-->

    <section class="order">
        <div class="order__container">
            <h1 class="order__title">
                Заказ на доставку
            </h1>
            <form class="order__form" action="" method="get">
                <div class="order__form-item">
                    <label class="order__form-label" for="name">
                        Имя
                    </label>
                    <input class="order__form-input delivery-input" type="text" name="user_name" id="name" placeholder="Введите имя" value="Илья">
                </div>
                <div class="order__form-item">
                    <label class="order__form-label" for="phone">
                        Номер телефона
                    </label>
                    <div class="order__input-wrapper">
                        <input class="order__form-input delivery-input" type="tel" name="user_phone" id="phone" value="+380123456789" readonly pattern="[\+]\d{3}\s[\(]\d{2}[\)]\s\d{3}[\-]\d{2}[\-]\d{2}" disabled>
                        <button class="order__form-inside-button button__tertiary"  type="submit">
                            Изменить
                        </button>
                    </div>
                </div>
                <div class="order__form-item">
                    <label class="order__form-label" for="delivery-type">
                        Адрес доставки
                    </label>
                    <fieldset class="order__form-fieldset delivery-input">
                        <div class="order__fieldset-input-wrapper">
                            <input class="order__form-input-fieldset delivery-input" type="text" name="delivery-type" id="delivery-type" value="Дом" readonly>
                            <button class="order__form-fieldset-button button__tertiary"  type="submit">
                                Изменить
                            </button>
                        </div>
                        <div class="order__fieldset-input-wrapper">
                            <textarea class="order__form-input-textarea delivery-input" type="text" name="address" id="address" readonly>ул. Крещатик, д. 8, под. Последний, эт. Последний, кв. 23, код Домофон</textarea>
                            <button class="order__form-fieldset-button button__tertiary"  type="submit">
                                Выбрать самовывоз
                            </button>
                        </div>
                    </fieldset>
                </div>
                <div class="order__form-item">
                    <label class="order__form-label" for="delivery-time">
                        Время доставки
                    </label>
                    <div class="order__input-wrapper">
                        <input class="order__form-input delivery-input" type="text" name="user_phone" id="delivery-time" value="Побыстрее" readonly disabled>
                        <button class="order__form-inside-button button__tertiary"  type="submit">
                            Изменить
                        </button>
                    </div>
                </div>
            </form>
            <div class="order__promo-group">
                <h2 class="order__promo-title">
                    Промокод
                </h2>
                <%- include('shared/promo-input') %>
            </div>
        </div>
    </section>

    <!--ORDER SECTION ENDS-->

    <!--ORDER-BASKET SECTION STARTS-->

    <% const basketItems = [
        {
          title: 'Комбо за 599 ₴',
            description: 'Средняя 30 см, традиционное тесто',
